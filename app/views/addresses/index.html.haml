%h1 Active CIDRs
%ul.list-group
- @addresses.each do |address|
  %li.list-group-item
    .row
      .col-sm-8
        = address.cidr
      .col-sm-2
        = link_to "Edit", edit_address_path(address), class: "btn btn-default btn-sm"
      .col-sm-2
        = link_to "Delete", address_path(address), method: "delete", class: "btn btn-danger btn-sm"
= link_to "Add Address", new_address_path
&nbsp;|&nbsp;
= link_to "Lookup IP", lookup_addresses_path
